<%- include('./layouts/header') %>

<h1>Register</h1>
<form action="/auth/register" method="post" class="lg-form">

    <div>
        <label for="name">Name of Post Office</label>
        <input type="text" name="name" id="name" required value="<%= locals.name ? name : '' %>"> 
    </div>
    
    <div>
        <label for="email">Email/Username</label>
        <input type="text" name="email" id="email" value="<%= locals.email ? email : '' %>"> 
    </div>

    <div>
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="<%= locals.address ? address : '' %>" required> 
    </div>

    <div>
        <label for="pincode">Pin Code</label>
        <input type="text" name="pincode" id="pincode" value="<%= locals.pincode ? pincode : '' %>" required> 
    </div>

    <div>
        <label for="city">City/Village</label>
        <input type="text" name="city" id="city" value="<%= locals.city ? city : '' %>" required> 
    </div>
    
    <div>
        <label for="state">State</label>
        <input type="text" name="state" id="state" value="<%= locals.state ? state : '' %>" required> 
    </div>

    <div>
        <label for="password">Password</label>
        <input type="password" name="password" id="password">
    </div>

    <div>
        <label for="password2">Confirm Password</label>
        <input type="password" name="password2" id="password2">
    </div>

    <div>
        <input type="submit" value="Register">
    </div>

</form>

<div>
    <p>
        Already have an account? <span><a href="/auth/login">Login</a></span>
    </p>
</div>

<br>


<%- include('./layouts/footer') %>